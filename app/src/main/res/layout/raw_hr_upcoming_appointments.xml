<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_marginEnd="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/medical_records_card">



        <ImageView
            android:id="@+id/ivDoctorImage"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/gray_circle" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDoctorName"
            android:text="Dr. Name"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/font_blue"
            android:textSize="@dimen/_12sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/ivDoctorImage"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSpeciality"
            android:text="Medical Oncologist"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textColor="@color/medical_text_gray"
            android:textSize="@dimen/_10sdp"
            android:layout_toEndOf="@+id/ivDoctorImage"
            android:layout_below="@+id/tvDoctorName"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            android:text="20th Dec 2020"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textColor="@color/medical_text_gray"
            android:textSize="@dimen/_9sdp"
            android:layout_toEndOf="@+id/ivDoctorImage"
            android:layout_below="@+id/tvSpeciality"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/font_blue"
            android:id="@+id/ivHr"
            android:layout_below="@+id/tvDate"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvView"
            android:fontFamily="@font/rubik_regular"
            android:minWidth="@dimen/_90sdp"
            android:background="@drawable/common_button_transparent_bg"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ivHr"
            android:text="@string/view"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            />
</RelativeLayout>
</layout>
