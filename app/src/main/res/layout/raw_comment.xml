<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/comments_bg"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:text="What precautaions should I take during chemo?"
                    android:textColor="@color/forums_card_gray"
                    android:textSize="@dimen/_12sdp"
                    android:layout_toStartOf="@+id/ivMenu"
                    android:layout_marginEnd="@dimen/_3sdp"/>

                <ImageView
                    android:id="@+id/ivMenu"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_baseline_more_vert_24" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDate"
                android:text="January 23rd, 2021"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/font_gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="end"
                android:layout_gravity="end"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/no_border_gray_bg"
                android:gravity="center_vertical"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/linLikeContainer"
                    android:gravity="center"
                    android:minWidth="@dimen/_60sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    >

                    <RelativeLayout
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:id="@+id/relImage"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/white_circle_blue_border">
                        <ImageView
                            android:id="@+id/ivUserProfile"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/ic_user_image" />

                        <ImageView
                            android:id="@+id/ivVerified"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_not_verified" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvName"
                            android:text="Peggy Brown"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_toEndOf="@+id/ivUserProfile"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvHeadline"
                            android:text="January 23rd, 2021"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/nunito_regular"
                            android:textColor="@color/font_gray"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_toEndOf="@+id/ivUserProfile"
                            android:layout_below="@+id/tvName"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            />
                    </LinearLayout>





                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linLikeContainer"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical|end">

                    <LinearLayout
                        android:id="@+id/linLikeCOntainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/badge_background_primary_blue"
                        android:gravity="center"
                        android:minWidth="@dimen/_60sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/tvLikesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="123"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/ivLikes"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_like_white" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</layout>