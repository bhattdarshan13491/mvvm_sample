<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_6sdp"
    android:padding="@dimen/_6sdp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            android:src="@drawable/ic_green_dot"
            android:layout_marginTop="@dimen/_4sdp"
            android:id="@+id/ivDot"
            />
        <ImageView
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/green"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_3sdp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:text="Sample Received"
            android:fontFamily="@font/nunito_medium"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/font_light_blue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvStatus"
            android:text="On Hold"
            android:fontFamily="@font/nunito_medium"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/font_light_blue"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescription"
            android:text="The sample has failed the Tumor Content Assessment. Test will be put on HOLD until we receive an alternate block."
            android:fontFamily="@font/nunito_medium"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/font_light_blue"
            />


    </LinearLayout>






</LinearLayout>
</layout>