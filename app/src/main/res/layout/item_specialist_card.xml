<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_rounded_corners">

            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_doctor" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/blue_gradient"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_12sdp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="Dr Sharma"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvSpeciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDoctorName"
                android:fontFamily="@font/nunito_medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Physiotherapist"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSpeciality"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_medium"
                android:maxLines="1"
                android:text="5 Years of Experience"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

    </RelativeLayout>

</layout>