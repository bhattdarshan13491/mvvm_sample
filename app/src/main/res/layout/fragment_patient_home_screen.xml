<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.oncobuddy.app.utils.container_classes.SlidingRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relRoot"
        android:background="@color/lightest_bg">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nestedScrollView"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <com.oncobuddy.app.utils.container_classes.SlidingLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_bg"
                    android:id="@+id/linUpperContainner"
                    android:padding="@dimen/_15sdp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp">

                        <ImageView
                            android:id="@+id/ivProfile"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_user_image_blue" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentEnd="true">
                            <ImageView
                                android:id="@+id/ivSupport"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_support_new" />
                            <ImageView
                                android:id="@+id/ivChat"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:src="@drawable/ic_chat_white" />

                            <ImageView
                                android:id="@+id/ivNotification"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_notification_white" />


                        </LinearLayout>




                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_medium"
                        android:id="@+id/tvWelcome"
                        android:text="Hi Good morning, Varun"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_medium"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:id="@+id/tvQuote"
                        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"/>


                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.core.widget.NestedScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_12sdp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/linGeneticReportCOntainer"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/CommonHomeScreenTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/track_test_report" />

                                        <androidx.cardview.widget.CardView
                                            style="@style/ShortsCommonCardView"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:padding="@dimen/_10sdp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical"
                                                android:padding="@dimen/_12sdp">

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/nunito_bold"
                                                        android:text="Target Indigine"
                                                        android:textAllCaps="true"
                                                        android:textColor="@color/splash_title_color"
                                                        android:textSize="@dimen/_11sdp" />

                                                    <TextView
                                                        android:visibility="gone"
                                                        android:id="@+id/tvViewDetails"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignParentEnd="true"
                                                        android:fontFamily="@font/nunito_bold"
                                                        android:text="View Details"
                                                        android:textColor="@color/font_light_blue"
                                                        android:textSize="@dimen/_10sdp" />

                                                </RelativeLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:weightSum="2"
                                                    android:layout_marginTop="@dimen/_5sdp"
                                                    android:layout_marginBottom="@dimen/_5sdp"
                                                    android:orientation="horizontal">
                                                    <TextView
                                                        android:id="@+id/tvView"
                                                        android:layout_width="0dp"
                                                        android:layout_weight="1"
                                                        android:layout_height="wrap_content"
                                                        android:layout_below="@+id/ivLogo"
                                                        style="@style/NovAppCommonButton"
                                                        android:layout_marginEnd="@dimen/_6sdp"
                                                        android:text="@string/view_reports"/>
                                                    <TextView
                                                        android:id="@+id/tvCheckStatus"
                                                        android:layout_width="0dp"
                                                        android:layout_weight="1"
                                                        android:layout_height="wrap_content"
                                                        android:layout_below="@+id/ivLogo"
                                                        style="@style/NovAppCommonButton"
                                                        android:layout_marginEnd="@dimen/_6sdp"
                                                        android:text="@string/check_status"/>


                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:visibility="gone"
                                                    android:layout_marginTop="@dimen/_5sdp"
                                                    android:orientation="horizontal">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/nunito_bold"
                                                        android:text="Status :"
                                                        android:textColor="@color/font_gray_dark"
                                                        android:textSize="@dimen/_10sdp" />

                                                    <TextView
                                                        android:id="@+id/tvStatusVal"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginStart="@dimen/_10sdp"
                                                        android:ellipsize="end"
                                                        android:fontFamily="@font/nunito_medium"
                                                        android:maxLines="2"
                                                        android:text="Library preparation is in progress"
                                                        android:textColor="@color/splash_title_color"
                                                        android:textSize="@dimen/_10sdp" />


                                                </LinearLayout>





                                            </LinearLayout>


                                        </androidx.cardview.widget.CardView>
                                    </LinearLayout>



                                    <LinearLayout
                                        android:id="@+id/linTodayAppointmentsContainer"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:visibility="gone">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:orientation="horizontal">

                                            <TextView
                                                style="@style/CommonHomeScreenTitle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentStart="true"
                                                android:text="@string/upcoming_appointments" />

                                            <TextView
                                                android:id="@+id/tvSTartAppointments"
                                                style="@style/CommonHomeScreenTitle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:text="@string/view_all" />

                                        </RelativeLayout>
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal">


                                            <androidx.recyclerview.widget.RecyclerView
                                                android:id="@+id/rvTodayAppointments"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal" />

                                            <TextView
                                                android:id="@+id/tvNoData"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginStart="@dimen/_10sdp"
                                                android:fontFamily="@font/nunito_semi_bold"
                                                android:text="@string/no_appointments_for_today"
                                                android:textColor="@color/gray_font"
                                                android:textSize="@dimen/_10sdp"
                                                android:visibility="gone" />


                                        </RelativeLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:id="@+id/linVideosContainer"
                                        android:orientation="vertical">
                                        <RelativeLayout
                                            android:id="@+id/relTrendingVideosTitle"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:orientation="horizontal">

                                            <TextView
                                                style="@style/CommonHomeScreenTitle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentStart="true"
                                                android:text="Videos for you" />

                                            <TextView
                                                android:id="@+id/tvViewALlVideos"
                                                style="@style/CommonHomeScreenTitle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:text="@string/view_all" />

                                        </RelativeLayout>


                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rvLatestVideos"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:id="@+id/linBlogsContainer"
                                        android:orientation="vertical">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:orientation="horizontal">

                                            <TextView
                                                style="@style/CommonHomeScreenTitle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentStart="true"
                                                android:text="Blogs" />

                                            <TextView
                                                android:id="@+id/tvViewAllBlogs"
                                                style="@style/CommonHomeScreenTitle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:text="@string/view_all" />

                                        </RelativeLayout>


                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rvForums"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:id="@+id/relBuddyTalks"
                                        android:layout_marginTop="@dimen/_10sdp">

                                        <TextView
                                            style="@style/CommonHomeScreenTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="BuddyTalks" />

                                        <TextView
                                            android:id="@+id/tvViewAllPosts"
                                            style="@style/CommonHomeScreenTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:text="@string/view_all" />

                                    </RelativeLayout>

                                    <include
                                        android:id="@+id/layoutQuestion"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_6sdp"
                                        layout="@layout/item_question"/>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/rvExperts"
                                        android:visibility="gone"
                                        android:layout_marginTop="@dimen/_6sdp">

                                        <TextView
                                            style="@style/CommonHomeScreenTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Ask Experts" />

                                        <TextView
                                            android:id="@+id/tvViewAllExpertQues"
                                            style="@style/CommonHomeScreenTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:text="@string/view_all" />

                                    </RelativeLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvAskExpert"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_60sdp"/>


                                </LinearLayout>
                            </androidx.core.widget.NestedScrollView>


                        </LinearLayout>
                    </RelativeLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.oncobuddy.app.utils.container_classes.SlidingLinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/ic_float_add"
            android:elevation="@dimen/_30sdp"
            android:visibility="gone"
            android:foreground="?attr/selectableItemBackground" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clickable="true"
            android:id="@+id/frFloating"
            android:background="@color/hald_transparent"
            />

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fabmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:menu_animationDelayPerItem="100"
            app:menu_backgroundColor="@android:color/transparent"
            app:menu_buttonSpacing="@dimen/_4sdp"
            app:menu_colorNormal="@color/quoted_text_blue"
            app:menu_colorPressed="@color/quoted_text_blue"
            app:menu_colorRipple="#99FFFFFF"
            app:menu_fab_size="normal"
            app:menu_icon="@drawable/fab_add"
            app:menu_labels_colorNormal="@color/quoted_text_blue"
            app:menu_labels_colorPressed="@color/quoted_text_blue"
            app:menu_labels_colorRipple="#66FFFFFF"
            app:menu_labels_cornerRadius="@dimen/_5sdp"
            app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            app:menu_labels_margin="@dimen/_10sdp"
            app:menu_labels_position="left"
            app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            app:menu_labels_style="@style/FloatingTextSTyle"
            app:menu_openDirection="up"
            app:menu_shadowColor="#66000000"
            app:menu_shadowRadius="4dp"
            app:menu_shadowXOffset="1dp"
            app:menu_shadowYOffset="3dp"
            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/floatAddPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_post_white_96"
                app:fab_colorNormal="@color/colorPrimary"
                app:fab_colorPressed="@color/colorPrimaryDark"
                app:fab_label="Add Post"
                app:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/floatAskExperts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ask_expert_white"
                app:fab_colorNormal="@color/colorPrimary"
                app:fab_colorPressed="@color/colorPrimaryDark"
                app:fab_label="Ask Experts"
                app:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/floatUploadReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_upload_white"
                android:visibility="gone"
                app:fab_colorNormal="@color/colorPrimary"
                app:fab_colorPressed="@color/colorPrimaryDark"
                app:fab_label="Upload Report"
                app:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/floatBookCOnsultation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calender_white"
                app:fab_colorNormal="@color/colorPrimary"
                app:fab_colorPressed="@color/colorPrimaryDark"
                app:fab_label="Book Consultation"
                app:fab_size="mini" />


        </com.github.clans.fab.FloatingActionMenu>


        <include android:id="@+id/layoutProgress"
            layout="@layout/progress_bar"/>

    </com.oncobuddy.app.utils.container_classes.SlidingRelativeLayout>
</layout>
