<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.oncobuddy.app.utils.container_classes.SlidingRelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightest_bg"
        tools:context=".views.activities.NovDoctorDetailsActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rlDocActBar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:background="@drawable/blue_bg_one_side_rounded">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_6sdp">

                        <ImageView
                            android:id="@+id/ivBack"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/ic_back_arrow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/ivBack"
                            android:fontFamily="@font/nunito_bold"
                            android:text="My QR Code"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:id="@+id/ivShare"
                            android:src="@drawable/ic_share_new"
                            app:tint="@color/white"
                            android:layout_alignParentEnd="true"
                            />


                    </RelativeLayout>
                </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/rlDoctorDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_90sdp"
                        android:layout_marginEnd="@dimen/_14sdp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_12sdp"
                        android:paddingTop="@dimen/_36sdp"
                        android:paddingBottom="@dimen/_36sdp"
                        android:background="@drawable/rounded_white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvDrName"
                            android:text="Dr SHarmeela"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/font_blue"
                            android:fontFamily="@font/nunito_semi_bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvSpecialization"
                            android:text="Medical Oncologist"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/font_blue"
                            android:fontFamily="@font/nunito_medium"
                            />

                        <ImageView
                            android:id="@+id/ivQRCode"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:src="@drawable/square_placeholder"
                            android:scaleType="fitXY"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor Code"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/font_blue"
                            android:fontFamily="@font/nunito_medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvCOde"
                            android:text="123456"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/font_blue"
                            android:fontFamily="@font/nunito_bold"
                            />


                </LinearLayout>

            </RelativeLayout>
        </ScrollView>



    </com.oncobuddy.app.utils.container_classes.SlidingRelativeLayout>
</layout>