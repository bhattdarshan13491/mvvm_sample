<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<com.oncobuddy.app.utils.container_classes.SlidingLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/_7sdp"
    android:background="@drawable/slot_card_bg"
    android:padding="@dimen/_12sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:id="@+id/relImage"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_alignParentStart="true"
        android:background="@drawable/white_circle_blue_border">
        <ImageView
            android:id="@+id/ivDoctorImage"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_user_image" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDoctorName"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        tools:text="Doctor name"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/title_text_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancer_type_colon"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/nunito_bold"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCancerType"
                tools:text="1234567890"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/nunito_regular"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sub_cancer_type_colon"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/nunito_bold"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSubType"
                tools:text="1234567890"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/nunito_regular"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year_of_experience"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/nunito_bold"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvExp"
                android:layout_toEndOf="@+id/tvAptIdTitle"
                tools:text="1234567890"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/nunito_regular"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital name :"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/nunito_bold"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvHospitalName"
                android:layout_toEndOf="@+id/tvAptIdTitle"
                tools:text="1234567890"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/nunito_regular"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddPatient"
            android:layout_gravity="center_horizontal"
            android:text="@string/add_patient"
            android:background="@drawable/common_button_bg"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>
    </LinearLayout>




</com.oncobuddy.app.utils.container_classes.SlidingLinearLayout>
</layout>