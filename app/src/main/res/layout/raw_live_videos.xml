<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        style="@style/CommonProfileCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linCOntent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp">

                <ImageView
                    android:id="@+id/ivDoctorImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/square_placeholder"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_live"
                        android:layout_marginEnd="@dimen/_5sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/live"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:textAllCaps="true"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivPlayVideo"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_you_tube" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="start"
                android:minWidth="@dimen/_70sdp"
                android:background="@drawable/forums_like_bg"
                android:gravity="center"
                android:id="@+id/linLike"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_minus15sdp"
                android:padding="@dimen/_3sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_forums_like"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLikesCOunt"
                    android:text="102"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/font_gray" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:layout_margin="@dimen/_6sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|start"
                        android:id="@+id/tvTitle"
                        android:text="Webinar Name"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/font_light_blue"
                        android:textSize="@dimen/_14sdp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|start"
                        android:id="@+id/tvDescription"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/nunito_medium"
                        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                        android:textColor="@color/quoted_text_blue"
                        android:textSize="@dimen/_10sdp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="center_vertical|start"
                        android:id="@+id/tvDateTime"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/nunito_regular"
                        android:text="10 Feb 2021, 02:00 PM"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_font"
                        android:textSize="@dimen/_12sdp"
                        />

                </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</layout>
