<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightest_bg"
        tools:context=".views.activities.NovSpecialistActivity">

        <RelativeLayout
            android:id="@+id/rlActionBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:background="@color/white">
            <ImageView
                android:layout_marginStart="@dimen/_16sdp"
                android:id="@+id/ivBackArrow"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_back_arrow"
                app:tint="@color/font_light_blue" />
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginStart="@dimen/_6sdp"
                android:text="Physiotherapist"
                android:layout_toEndOf="@+id/ivBackArrow"
                android:textColor="@color/font_light_blue"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:src="@drawable/search_icon" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="@dimen/_16sdp"
            android:id="@+id/rvSpecialist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlActionBar" />
    </RelativeLayout>
</layout>